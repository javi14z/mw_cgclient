acl "trusted" {
        127.0.0.1;    # ns1 - can be set to localhost
};

options {
	directory "/var/cache/bind";

	forwarders {
                8.8.8.8;
                8.8.4.4;
        };

        # edns yes;  // Habilita EDNS
        # max-udp-size 4096;  // Otras opciones de configuración aquí
	dnssec-validation auto; 
	listen-on-v6 { any; };
};
